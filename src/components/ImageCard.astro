---
import type { ImageMetadata } from "astro";
import { Picture } from "astro:assets";

interface Props {
  imagePath: string;
  alt: string;
  aspect?: "square" | "video";
}

const { imagePath, alt, aspect = "square" } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif,webp,avif}"
);
if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif,webp,avif}"`
  );
---

<div
  class="skeleton-box max-w-[30rem] overflow-hidden rounded-xl bg-slate-200 shadow-sm"
>
  <Picture
    src={images[imagePath]()}
    alt={alt}
    loading="lazy"
    formats={["avif", "webp"]}
    class:list={[
      "w-full h-full object-cover hover:scale-110 transition duration-500 ease-in-out image-card",
      {
        "aspect-square": aspect === "square",
        "aspect-video": aspect === "video",
      },
    ]}
  />
</div>

<style>
  .image-card {
    cursor:
      url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg'  width='40' height='48' viewport='0 0 100 100' style='fill:black;font-size:24px;'><text y='50%'>ðŸ’–</text></svg>")
        16 0,
      auto;
  }
</style>
