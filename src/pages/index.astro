---
import BaseLayout from "@/layouts/BaseLayout.astro";
import LottieAnimation from "astro-integration-lottie/Lottie.astro";
import SectionWrapper from "@/layouts/SectionWrapper.astro";
import { Link } from "@/components/Link";
import { ArrowRight } from "lucide-react";
---

<BaseLayout>
  <SectionWrapper class="place-self-center">
    <LottieAnimation
      src="https://lottie.host/07a7f387-aa6d-4de1-94c0-b62f480ededf/zDBkThcK9Z.json"
      autoplay="visible"
      class="mx-auto w-40"
    />
    <article class="text-center">
      <h1 class="font-serif text-2xl font-normal text-slate-800">
        Pitching Our Site's Tents
      </h1>
      <p class="text-slate-500">
        This page is currently under active development
      </p>
      <Link
        href="/unity-in-action"
        variant="ghost"
        className="mt-10 text-slate-500 hover:text-brand-color-darker"
      >
        Checkout upcoming event <ArrowRight />
      </Link>
    </article>
  </SectionWrapper>
</BaseLayout>
